<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="thesis_application.login_page"
             Title="Bejelentkezés"
             >

    <!-- LOGIN PAGE -->

    <StackLayout Padding="24">
        <Label
            Text="Email cím"
            TextColor="Black"
            FontSize="24"
            FontAttributes="Bold"
            />
        <Entry
            x:Name="entry_email"
            Text="asd@asd.hu"
            Placeholder=""
            Keyboard="Email"
            />
        <Label
            Text="Jelszó"
            TextColor="Black"
            FontSize="24"
            FontAttributes="Bold"
            />
        <Entry
            x:Name="entry_password"
            Text="asd"
            Placeholder=""
            IsPassword="True"
            />
        <Button
            Text="Belépés"
            BackgroundColor="Wheat"
            CornerRadius="24"
            Command="{Binding click_login}"/>
        <Button
            Text="Regisztráció"
            BackgroundColor="White"
            CornerRadius="24"
            Command="{Binding click_signup}"/>
        <Label
            x:Name="error"
            TextColor="Red"
            IsVisible="false"
            />
    </StackLayout>
</ContentPage>